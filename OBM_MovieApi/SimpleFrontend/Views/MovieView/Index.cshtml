            </div>

        </div>
    </div>
</div>
</div>


<div class="clearfix container">
    @foreach (var item in Model)
    {
        <div class="card-wrap">
            <div class="card">
                <img src="@item.Poster_Url" alt="Avatar" style="width:100%">
                <div class="container">
                    <h3><b>@item.Title</b></h3>
                    <h4>Staring - @item.LeadingActors</h4>
                    <h4>{ @item.Genre }</h4>
                    <p>
                        @for (var i = 0; i < 10; i++)
                        {
                            @if (i < item.Vote_Average)
                            {
                                <span class="fa fa-star checked" title="Vote Average"></span>
                            }
                            else
                            {
                                <span class="fa fa-star" title="Vote Average"></span>

                            }
                        }
                    </p>
                    <p>@item.Overview</p>
                </div>
            </div>
        </div>
    }
</div>
